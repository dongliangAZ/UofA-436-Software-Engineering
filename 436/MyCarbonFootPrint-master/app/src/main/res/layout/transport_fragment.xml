<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:paddingTop="25sp"
            android:layout_gravity="center"
            android:src="@drawable/car"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/yr"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Years:"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/car_year"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Make:"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/car_make"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="Model:"
            android:layout_gravity="center"/>

        <Spinner
            android:id="@+id/car_model"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


        <EditText
            android:id="@+id/car_mpg"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Miles Per Gallon"
            android:paddingTop="15sp" />

        <EditText
            android:id="@+id/miles_driven"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Miles Driven Today"
            android:paddingTop="10sp" />

        <Button
            android:id="@+id/button_calcTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calculate" />

        <TextView
            android:id="@+id/transportResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="50sp"
            android:paddingTop="10sp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:text=""/>

        <ImageView
            android:id="@+id/co2transport"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
